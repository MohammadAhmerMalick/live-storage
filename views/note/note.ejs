<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../layout/headContent.ejs', { headTitle : "Note" }) %>
  <link rel="stylesheet" href="./css/note.css" />
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-7 col-12 mx-auto">
        <form action="/" method="POST" class="form px-2 pt-4">
          <h1 class="text-center">Save Data</h1>
          <div class="mb-4">
            <label for="title" class="form-label">Title</label>
            <input name="title" type="text" class="form-control" id="title" placeholder="Title" />
          </div>
          <div class="mb-4">
            <label for="note" class="form-label">Note</label>
            <textarea name="note" class="form-control" id="note" rows="3" placeholder="Text/Code"></textarea>
          </div>
          <button type="submit" class="btn btn-primary px-4 w-100">Save</button>
        </form>
      </div>
    </div>
  </div>

  <%- include('../layout/pageEndScript.ejs') %>
  <%- include('../common/toaster/toaster') %>
  <%- include('./script') %>
</body>

</html>